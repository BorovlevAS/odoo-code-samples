<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="1">
        <record id="biko_group_return_order" model="res.groups">
            <field name="name">Use return orders</field>
            <field
                name="users"
                eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
            />
        </record>

        <record model="ir.rule" id="stock_ret_comp_rule">
            <field name="name">Stock Return multi-company</field>
            <field name="model_id" ref="model_sale_stock_return" />
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>

        <record model="ir.rule" id="stock_ret_line_comp_rule">
            <field name="name">Sales Order Line multi-company</field>
            <field name="model_id" ref="model_sale_stock_return_line" />
            <field name="domain_force">
                ['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]
            </field>
        </record>
    </data>
</odoo>
