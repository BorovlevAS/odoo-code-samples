<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="biko_product_template_view_inherit" model="ir.ui.view">
        <field name="name">biko.product.template.view.inherit</field>
        <field name="model">product.template</field>
        <field
            name="inherit_id"
            ref="biko_base_module.biko_product_template_view"
        />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="warranty" string="Warranty">
                    <group>
                        <field name="is_warranty" />
                        <field
                            name="warranty_duration"
                            attrs="{'invisible': [('is_warranty','=',False)]}"
                        />
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
