<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="warranty_certificate_tree" model="ir.ui.view">
        <field name="name">warranty.certificate.tree</field>
        <field name="model">warranty.certificate</field>
        <field name="arch" type="xml">
            <tree edit="0">
                <field name="warranty_date" />
                <field name="name" />
                <field name="sale_order_id" />
                <field name="so_line_id" />
            </tree>
        </field>
    </record>

    <record id="warranty_certificate_form" model="ir.ui.view">
        <field name="name">warranty.certificate.form</field>
        <field name="model">warranty.certificate</field>
        <field name="arch" type="xml">
            <form>
                <header />
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group name="main_group">
                        <field name="warranty_date" required="1" />
                        <field name="so_line_id" required="1" />
                        <field name="so_line_id_char" />
                        <field name="product_name" required="1" />
                        <field name="product_char" required="1" />
                        <field name="serial_no" required="1" />
                        <field name="warranty_duration" required="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
